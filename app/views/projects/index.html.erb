
<div class="row">
  <h2>Proyectos</h2>
  <div class="small-10 large-centered columns">
   <%= form_tag searchP_path, method: :post do %>
  <%= text_field_tag :search_name, 'Nombre del proyecto' %>
  <%= submit_tag "Buscar Proyecto" %>
<% end %>


  </div>
<div class="small-10 large-centered columns">

  <table class="table-custom">
    <thead>
      <tr class="titulo">
        <th><span>Nombre del Proyecto</span> </th>
        <th><span>Detalles</span></th>
        <th colspan="3"><span>Acciones</span></th>
      </tr>
    </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>

            <td><%= project.project_name %></td>
            <td>  <% if project.id %>
            <% @proyecto = Project.find_by_id(project.id).project_name %>
                 <%   @espacio = @proyecto.gsub(" ", "") %>
               <a href=""  data-reveal-id="<%= @espacio %>">Ver mas</a>
            <div id="<%= @espacio %>" class="reveal-modal reveal-modal-custom" data-reveal>

              <div class="row">
                <section class="pop-head">
                  <label>Detalles</label>
                </section>
                <section class="pop-body">
                  <div class="small-12 column">
                    <div class="field">
                      <label>Nombre de la empresa: <%= project.dateStart  %></label>

                    </div>
                  </div>
                   <div class="small-6 column">
                    <div class="field">
                      <label>Fecha de inicio: <%= project.dateStart %></label>

                    </div>
                  </div>
                   <div class="small-6 column">
                    <div class="field">
                      <label>Fecha de fin: <%= project.dateEnd %></label>

                    </div>
                  </div>


                  <div class="small-12 column">
                    <div class="field">
                      <label>Descripcion: <%= project.description %></label>
                    </div>
                  </div>



                </section>

            </div>
          </div>
          <% end %>
          </td>
          <td>  <%= link_to 'Editar', edit_project_path(project) %></td>
           <td><%= link_to 'X', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
