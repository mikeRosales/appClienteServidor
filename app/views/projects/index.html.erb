
<div class="row">
  <h2>Proyectos</h2>
  <div class="small-10 large-centered columns">
    <!--Campo de busqueda-->
  </div>
<div class="small-10 large-centered columns">
<div class="field">
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>

</div>
  <table class="table-custom">
    <thead>
      <tr class="titulo">
        <th><span>Nombre del Proyecto</span> </th>
        <th><span>Detalles</span></th>
        <th colspan="3"><span>Acciones</span></th>
      </tr>
    </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.project_name %></td>
            <td>  <% if project.id %>
            <a href="#"  data-reveal-id="myModal">Ver mas</a>              
            <div id="myModal" class="reveal-modal" data-reveal>
            
              <h1>details</h1>
              <div class="field">
              <label>Nombre de la empresa</label>
              <label>nombre de la bd</label>
               </div>
                <div class="field">
              <label>Fecha de inicio</label>
              <label>fecha inicio de la bd</label>
               </div>
                <div class="field">
              <label>Fecha de fin</label>
              <label>fecha fin de la bd</label>
               </div>
              <div id="grid_here" >
              </div>
              
            </div>
          <% end %>
          </td>
            
           
            
           <td><%= link_to 'X', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
