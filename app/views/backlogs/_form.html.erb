<%= form_for(@backlog) do |f| %>
  <% if @backlog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@backlog.errors.count, "error") %> prohibited this backlog from being saved:</h2>

      <ul>
      <% @backlog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="small-12 medium-centered columns">
    
    <div class="small-6 columns">
      <div class="field">
        <%= f.label :Nombre_de_la_Actividad %><br>
        <%= f.text_field :activity_name %>
      </div>
    </div>
    <div class="small-6 columns">
      <div class="field">
        <%= f.label :Fecha_de_inicio %><br>
        <%= f.date_field  :start_date %>
      </div>
    </div>
    <div class="small-6 columns">
      <div class="field">
        <%= f.label :Fecha_de_termino %><br>
        <%= f.date_field  :end_date %>
      </div>
    </div>
    <div class="small-12 columns">
      <div class="field">
        <%= f.label :Responsables %><br>
        <button class="align-top-min"><i class="icon-user-tie"></i></button>
      </div>
      <div class="small-12 columns">
        <div id="grid_here" >
          <div class="wishList-items">
            <ul>
              <li>Item 1<i class="icon-spinner"></i><i class="icon-cross"></i></i></li>
              <li>Item 2<i class="icon-spinner"></i><i class="icon-cross"></i></i></li>
              <li>Item 3<i class="icon-spinner"></i><i class="icon-cross"></i></i></li>
            </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="small-8 columns">
        <div class="actions">
          <button name="commit" type="submit" >Crear Actividad</button>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
