<div class="row">
  <h2>Contactos</h2>

  <div class="small-8 medium-centered columns">
<div class="field">
            <label>Agregar compa√±eros</label>
            <%= text_field_tag :contact_name %>
            <button name="add" type="submit" value="Ingresar">Agregar</button>
            
    </div>
<div class="field">
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>

</div>
  <table class="table-custom">
      <thead>
        <tr class="titulo">
          <th><span>Nombre</span> </th>
          <th><span>Detalles</span></th>
          <th colspan="3"><span>Acciones</span></th>
        </tr>
      </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.contact_name %></td>
          <td>
         <% if contact.id %>
            <a href="#"  data-reveal-id="myModal">Ver detalles</a>              
            <div id="myModal" class="reveal-modal" data-reveal>
            <table "table-custom">
            <caption>Detalles</caption>
                <thead>
                <th>Nombre</th>
                <th><%= Contact.find(contact.id).contact_name %></th>
                  <tr class="titulo">
                    <th><span>Proyecto</span> </th>
                    <th><span>Actividad</span></th>
                    <th><span>Estatus</span></th>
                  </tr>
                </thead>
                <tbody>
                    <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    </tr>
                </tbody>
              </table>
              
              
            </div>
          <% end %>
        </td>

          <td><%= link_to 'X', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>



