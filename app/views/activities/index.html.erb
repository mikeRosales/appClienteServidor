<div class="row">
  <h2>Lista de Actividades</h2>

  <table class="table-custom">
    <thead>
      <tr class="titulo">
      
        <th><span>Nombre</span></th>
        <th><span>Fecha de Inicio</span></th>
        <th><span>Fecha de Termino</span></th>
        <th><span>Responsables</span></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @activities.each do |activity| %>
        <tr>
          
          <td><%= activity.activity_name %></td>
          <td><%= activity.start_date %></td>
          <td><%= activity.end_date %></td>
          <td><%= activity.responsibles %></td>
          <td><%= link_to 'Show', activity %></td>
          <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
          <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>


